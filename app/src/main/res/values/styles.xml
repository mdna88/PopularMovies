<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Detail Activity title style. -->
    <style name="DetailActivityTitleText" >
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/detail_title_text</item>
    </style>

    <!-- Detail Activity default style. -->
    <style name="DetailActivityDefaultText" >
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/detail_sub_text</item>
    </style>

</resources>
