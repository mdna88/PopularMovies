<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.narvin.android.popularmovies.MoviesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/movie_gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="@dimen/grid_view_column"
            android:gravity="center"
            android:numColumns="2"
            android:scrollbars="vertical"
            android:stretchMode="columnWidth"
            />

        <TextView
            android:id="@+id/empty_element"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/gridView_empty_view"
            android:textSize="@dimen/empty_view_text"
            android:visibility="gone"/>

    </RelativeLayout>

</LinearLayout>
